					//      $('.calsb').hide() //请求成功,隐藏加载提示
					//     }
					// })
				}

				//给单个元素绑定
				$("#closeLoad").on("click", function() {
					$('.calsb').hide() //隐藏加载提示
				});
				//给多个元素绑定(选择由哪个元素触发)
				// $("#closeLoad").on("click","img", function() {      //do something here  });

				//当滚动条的位置处于页面高度的1/2时 显示向上
				$(window).scroll(function() {
					var bar = (document.body.scrollHeight) / 2;
					if($(window).scrollTop() > bar) {
						$("#topt").fadeIn(100);
					} else {
						$("#topt").fadeOut(100);
					}
				});
				//当点击跳转链接后，回到页面顶部位置  
				$("#topt").on("click", function() {
					$('body,html').animate({
						scrollTop: 0
					}, 300);
					// if ($('html').scrollTop()) {  
					//     $('html').animate({ scrollTop: 0 }, 1000);  
					//     return false;  
					// }  
					// $('body').animate({ scrollTop: 0 }, 1000);  
					//      return false;              
					// alert("yes");
				});

				// 悬浮窗口
